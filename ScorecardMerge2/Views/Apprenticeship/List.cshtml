
@{
    ViewBag.Title = "Apprenticeship Scorecard";
}

<div id="main-container" mode="main">
    <!--<div style="width: 300px; height:300px" id="testGraph"></div>-->
    
    <div id="providers-container">
        <h2 id="listtitle" style="float: left">Apprenticeship training providers</h2>
        <div id="sortby-container">
            <form>
                <label for="sortby">Sort by:</label>
                <select name="sortby" id="sortby">
                    <option value="name" selected="selected">Name</option>
                    <option value="distance" disabled="disabled">Distance</option>
                    <option value="earnings" disabled="disabled">Future earnings</option>
                    <option value="satisfaction" disabled="disabled">Learner satisfaction</option>
                    <option value="passrate" disabled="disabled">Pass rate</option>
                </select>
            </form>
        </div>
        <div id="menu-button" class="noselect  active">Filters&hellip;</div>

        <form id="find-provider" class="active">
            <label for="provider">Provider name:</label>
            <br />
            <input type="text" id="find-provider-provider" name="provider" placeholder='e.g. "College"' />
            <br />
            <label for="postcode">Post code or town:</label>
            <br />
            <input type="text" id="find-provider-postcode" name="postcode" placeholder='e.g. "SE1" or "Cambridge"' />
            <select name="distance" id="find-provider-distance">
                <option value="5">within 5 miles</option>
                <option value="10">within 10 miles</option>
                <option value="15">within 15 miles</option>
                <option value="20">within 20 miles</option>
                <option value="40">within 40 miles</option>
            </select>
            <br />
            <label for="subject">Subject:</label>
            <br />
            <select name="subject" id="find-provider-subject">
                <option value="0" selected="selected">All subjects</option>
                <option value="1.2">1.2: Nursing and Subjects and Vocations Allied to Medicine</option>
                <option value="1.3">1.3: Health and Social Care</option>
                <option value="1.4">1.4: Public Services</option>
                <option value="1.5">1.5: Child Development and Well Being</option>
                <option value="2.1">2.1: Science</option>
                <option value="3.1">3.1: Agriculture</option>
                <option value="3.2">3.2: Horticulture and Forestry</option>
                <option value="3.3">3.3: Animal Care and Veterinary Science</option>
                <option value="3.4">3.4: Environmental Conservation</option>
                <option value="4.1">4.1: Engineering</option>
                <option value="4.2">4.2: Manufacturing Technologies</option>
                <option value="4.3">4.3: Transportation Operations and Maintenance</option>
                <option value="5.2">5.2: Building and Construction</option>
                <option value="6.1">6.1: ICT Practitioners</option>
                <option value="6.2">6.2: ICT for Users</option>
                <option value="7.1">7.1: Retailing and Wholesaling</option>
                <option value="7.2">7.2: Warehousing and Distribution</option>
                <option value="7.3">7.3: Service Enterprises</option>
                <option value="7.4">7.4: Hospitality and Catering</option>
                <option value="8.1">8.1: Sport, Leisure and Recreation</option>
                <option value="8.2">8.2: Travel and Tourism</option>
                <option value="9.2">9.2: Crafts, Creative Arts and Design</option>
                <option value="9.3">9.3: Media and Communication</option>
                <option value="9.4">9.4: Publishing and Information Services</option>
                <option value="13.1">13.1: Teaching and Lecturing</option>
                <option value="13.2">13.2: Direct Learning Support</option>
                <option value="15.1">15.1: Accounting and Finance</option>
                <option value="15.2">15.2: Administration</option>
                <option value="15.3">15.3: Business management</option>
                <option value="15.4">15.4: Marketing and Sales</option>
            </select>
            <br />
            <div id="find-provider-clear-search-container">
                <button type="submit" id="find-provider-submit">Search</button>
                <a href="#" id="clear-search">Clear filter</a>&emsp;<a href="#" id="close-search">Close</a>
            </div>            
        </form>
        <div id="providers-all"></div>
        <div id="scrollTo" class="loading-indicator">Loading results&hellip;</div>
        <div id="noResults" class="loading-indicator" style="display:none">No results found.</div>
    </div>
    <div id="details-container">
        <div class="loading-indicator">Loading, please wait&hellip;</div>
    </div>
</div>

@section scripts {
    @Html.Partial("_ListTemplates")
    @Scripts.Render("~/bundles/ListProvider")
}
